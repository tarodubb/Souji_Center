<div class="container mt-4">
<h2 class="centered">Book <%= @service.name %> by <%= @service.user.first_name %></h2>
<h4 class="centered">Hourly rate: <i class="fa-solid fa-dollar-sign"></i><%= @service.price %></h4>
<%= simple_form_for [@service, @booking] do |f| %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.button :submit, input_html: { class: 'btn btn-flat' } %>
<% end %>
<%= link_to "<< Back to all services", services_path, class: "btn btn-ghost purple" %>
</div>
