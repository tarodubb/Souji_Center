<div class="profile-card">
 <% if @user.photo.key %>
    <%= cl_image_tag @user.photo.key, class: "profile-img", :gravity=>"face", :height=>175, :width=>175, :crop=>"thumb"%>
  <% else %>
    <%= image_tag "default_avatar.png", class: "profile-img", :gravity=>"face", :height=>175, :width=>175, :crop=>"thumb"%>
  <% end %>
  <div class="card-contents">
    <div class="card-header">
        <div class="btn-connect">Save</div>
        <div class="btn-message">Message</div>
    </div>
    <div class="user-info">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <p><%= @user.email %></p>
      <p><%= @user.phone_number %></p>
    </div>

</div>
    <% if @user.services.first %>
      <h2 class="cleaner-banner">Cleaning Services</h2>
    <% end %>
  <div class="cleaner-services">
      <% @user.services.each do|service|%>
        <div class="service-card">
          <div class="card-body">
            <h4 class="card-title"><strong><%= service.name %></strong></h4>
            <p>Â¥<%= service.price %>/hour</p>
            <p><%= service.description %></p>
          </div>
        </div>
    <% end %>
