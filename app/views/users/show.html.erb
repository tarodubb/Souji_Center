<div class="profile-card">
 <% if @user.photo.key %>
    <%= cl_image_tag @user.photo.key, class: "profile-img", :gravity=>"face", :height=>175, :width=>175, :crop=>"thumb"%>
  <% else %>
    <%= image_tag "default_avatar.png", class: "profile-img", :gravity=>"face", :height=>175, :width=>175, :crop=>"thumb"%>
  <% end %>
  <div class="card-contents">
    <div class="card-header">
        <div class="btn-connect">Connect</div>
        <div class="btn-message">Message</div>
    </div>
    <div class="user-info">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <p><%= @user.email %></p>
      <p><%= @user.phone_number %></p>
    </div>
  </div>


</div>
